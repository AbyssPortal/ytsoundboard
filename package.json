{
  "name": "youtube-soundboard-electron",
  "version": "1.0.0",
  "description": "YouTube Soundboard Electron App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": {
    "name": "planteraminehut",
    "email": "planteraminehut@gmail.com"
  },

  "license": "MIT",
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourdomain.youtubesoundboard",
    "productName": "YouTube Soundboard",
    "files": [
      "**/*",
      "!youtube-soundboard/"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YouTube Soundboard",
      "installerLanguages": [
        "en_US"
      ]
    }
  },
  "homepage": "https://github.com/planteraminehut/youtube-soundboard-electron"
}
